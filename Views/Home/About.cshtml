@{
    ViewData["Title"] = "About Us";
}
<link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootswatch@5.3.3/dist/zephyr/bootstrap.min.css">

<div class="container mt-4">

    <div class="text-center mb-5">
        <h1 class="display-4">SmarTrack</h1>
        <p class="lead text-muted">A modern solution for proactive network device management via SNMP built with: </p>
        <div class="row">
            <div class="col-12 text-center">
                <div>
                    <span class="badge bg-primary fs-6 m-1">ASP.NET Core</span>
                    <span class="badge bg-dark fs-6 m-1">Entity Framework Core</span>
                    <span class="badge bg-info fs-6 m-1">SignalR</span>
                    <span class="badge bg-success fs-6 m-1">Bootstrap 5</span>
                    <span class="badge bg-warning text-dark fs-6 m-1">QuestPDF</span>
                </div>
            </div>
        </div>
    </div>

    <hr class="my-5">

    <div class="row text-center">
        <div class="col-12">
            <h2 class="mb-4">Key Features</h2>
        </div>
    </div>

    <div class="row g-4">
        <div class="col-lg-4 col-md-6">
            <div class="card h-100 shadow-sm">
                <div class="card-body text-center">
                    <div class="display-4 text-primary mb-2"><i class="bi bi-grid-1x2-fill"></i></div>
                    <h5 class="card-title">Real-Time Dashboard</h5>
                    <p class="card-text">Instantly view the status of all your monitored devices. Color-coded health statuses let you identify issues at a glance.</p>
                </div>
            </div>
        </div>
        <div class="col-lg-4 col-md-6">
            <div class="card h-100 shadow-sm">
                <div class="card-body text-center">
                    <div class="display-4 text-primary mb-2"><i class="bi bi-bar-chart-line-fill"></i></div>
                    <h5 class="card-title">Detailed Metrics</h5>
                    <p class="card-text">Dive deep into individual device performance. Track live CPU, RAM, and Disk usage with clear, intuitive visuals.</p>
                </div>
            </div>
        </div>
        <div class="col-lg-4 col-md-6">
            <div class="card h-100 shadow-sm">
                <div class="card-body text-center">
                    <div class="display-4 text-primary mb-2"><i class="bi bi-shield-fill-check"></i></div>
                    <h5 class="card-title">Proactive Health Analysis</h5>
                    <p class="card-text">A background service continuously analyzes device data, flagging potential issues like high resource utilization before they become critical.</p>
                </div>
            </div>
        </div>
        <div class="col-lg-4 col-md-6">
            <div class="card h-100 shadow-sm">
                <div class="card-body text-center">
                    <div class="display-4 text-primary mb-2"><i class="bi bi-bell-fill"></i></div>
                    <h5 class="card-title">Instant Notifications</h5>
                    <p class="card-text">Receive immediate in-app notifications the moment a device's status changes to 'Warning', allowing for rapid response.</p>
                </div>
            </div>
        </div>
        <div class="col-lg-4 col-md-6">
            <div class="card h-100 shadow-sm">
                <div class="card-body text-center">
                    <div class="display-4 text-primary mb-2"><i class="bi bi-file-earmark-pdf-fill"></i></div>
                    <h5 class="card-title">Comprehensive Reporting</h5>
                    <p class="card-text">Generate detailed PDF reports for a complete system overview or a historical performance analysis of a single device.</p>
                </div>
            </div>
        </div>
        <div class="col-lg-4 col-md-6">
            <div class="card h-100 shadow-sm">
                <div class="card-body text-center">
                    <div class="display-4 text-primary mb-2"><i class="bi bi-hdd-stack-fill"></i></div>
                    <h5 class="card-title">Full Device Management</h5>
                    <p class="card-text">Easily add, edit, and remove devices from your monitoring dashboard through a simple and intuitive user interface.</p>
                </div>
            </div>
        </div>
    </div>
</div>